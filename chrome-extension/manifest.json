{
  "manifest_version": 3,
  "name": "Mind-Craft Capture",
  "version": "1.0.0",
  "description": "Capture web content and send it to Mind-Craft with AI-powered organization",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Open Mind-Craft Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-side-panel": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      },
      "description": "Open Mind-Craft Side Panel"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}